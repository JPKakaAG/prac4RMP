<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="prac4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:prac4"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
    <Tab Title="MainPage1">
            <ShellContent Title="Page1"
            ContentTemplate="{DataTemplate local:MainPage}"/>
    </Tab>
    <Tab Title="MainPage2">
        <ShellContent Title="Page2"
        ContentTemplate="{DataTemplate local:MainPage2}"/>

    </Tab>
    <Tab Title="Info">
        <ShellContent Title="Info"
        ContentTemplate="{DataTemplate local:Info}"/>
    </Tab>
    </TabBar>
</Shell>
